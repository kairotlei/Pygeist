<BootScreen>:
    name: "BootScreen"
    id: BootScreen
    
    MDCard:
        orientation: "vertical"
        id: login_card
        padding: 25
        spacing: 25
        size_hint: None, None
        size: "650dp", "525dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        
        
        MDBoxLayout:
            orientation: "vertical"
            halign: "right"
            

            MDBoxLayout:
                orientation: "vertical"
                size_hint: None, None
                height: 100
                width: 600
                
                MDLabel:
                    id: labeltextup
                    text: "[size=20]Pygeist[/size] \n  Inspirado en Zeitgeist de Interference \n"
                    font_size: 12
                    halign: "center"
                    text_color: 0,0,0,1
                    markup: True
                    
            
            MDScrollView:

                MDList:
                    id: jlist

            MDBoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                height: 50
                width: 600
                
                MDCheckbox:
                    id: timerCheck
                    size_hint: None, None
                    size: "48dp", "48dp"
                    pos_hint: {"center_x": .5, "center_y": .3}
                
                MDLabel:
                    id: timerText
                    text: "Timer?"
                    pos_hint: {"center_x": .5, "center_y": .2}
                    

                MDFlatButton:
                    size_hint: None, None
                    halign: "right"
                    text: "Informaci√≥n software"
                    font_size: 12
                    #            RR  GG  BB  AL
                    md_bg_color: 0.25,0.25,0.25,0.1
                    text_color:  0.5,0.5,0.5,1
                    on_press: root.show_alert_dialog()
                    pos_hint: {"center_x": .5, "center_y": .3}
                
                